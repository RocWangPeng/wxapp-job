/**index.wxss**/
@import "/pages/tabbar-agent/tabbar-agent.wxss";
page{
  background: #f1f1f1;
  padding-bottom: 120rpx;
}
.header-banner {
  width: 100%;
  height: 370rpx;
  position: relative;
  text-align: center;
  color: #fff;
}
textarea {
	width: auto;
}
.belongTeam{
  
   border-radius: 6rpx;
   position: absolute;
   z-index: 10;
   text-align: center;
