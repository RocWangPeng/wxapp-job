/* pages/show/show.wxss */
@import "/pages/tabbar-agent/tabbar-agent.wxss";
page{
  padding-bottom: 120rpx;
}
.header-banner{
  height: 260rpx;
  width: 100%;
}
.header-banner image{
  width: 100%;
  height: 100%;
}
.center{
  width: 680rpx;
  margin: 0 auto;
}
.show-info{
  height: 220rpx;
  background: #f1f1f1;
  position: relative;
}
.show-info text{
  display: block;
}
.show-info-head{
  width: 150rpx;
  max-height: 150rpx; 
  position: absolute;
  top: -88rpx;
	border-radius: 50%;
}
.name{
  padding-left: 185rpx;
  display: block;
  font-size: 30rpx;
  line-height: 90rpx;
}
.nike{
  font-size: 30rpx;
  color: #666666;  
	overflow : hidden;
	text-overflow: ellipsis;
	display: -webkit-box !important;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.show-main-title{
  display: block;
  text-align: center;
  /* line-height: 60rpx; */
  font-size: 30rpx;
  color: #fff;
}
.show-content .center{
  display: flex;
  /* justify-content: space-between; */
  flex-wrap: wrap;
  padding-bottom: 30rpx;
}
.show-item {
  width: 210rpx;
  min-height: 210rpx;
  /* max-height: 210rpx; */
  margin-right: 13rpx;
  margin-bottom: 13rpx;
  overflow: hidden;
}
 .show-item image{
   width: 100%; 
   height: 100% !important; 
} 
.show-content .oneImg{
	width: 100%;
  overflow: auto;
  display: flex;
  min-height: 500rpx;
}
.show-content .oneImg image{
	width: 100%;
  height: -"" !important;
  overflow: auto  !important;
}
.fengdi{
  display: block;
  width: 100%;
  padding-bottom: 130rpx;
}