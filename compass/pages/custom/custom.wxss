page{
  width: 100%;
  height: 100%;
  background: url(http://ii.sinelinked.com/miniProgramAssets/compass/bg.jpg) no-repeat center;
  /* background-size: 20%; */
}
.pan {
	display: flex;
	margin: 0 auto;
	align-items: center;
	justify-content: center;
	width: 701rpx;
	height: 701rpx;
	position:absolute;
  top: 46%;
  left: 50%;
  transform: translate(-50%,-50%);
	box-sizing: border-box;
	margin-top: -50rpx;
}

.pan .ten-line,
.pan .ten-vertical {
	position: absolute;
}

.pan .ten-line {
	width: 99%;
	height: 2rpx;
	background: red;
	z-index: 3;
	pointer-events: none;
}

.pan .ten-vertical {
	width: 2rpx;
	height: 99%;
	background: red;
	z-index: 3;
	pointer-events: none;
}

.pan-main {
	width: 701rpx;
	height: 701rpx;
	transition: .1s linear;
	border-radius: 50%;
	box-shadow: 0 0 30rpx rgba(0, 0, 0, .5);
	position: absolute;
	left: 0;
	top: 0;
	bottom: 0;
	right: 0;
	margin: auto;
}
.pan-main:hover{
  box-shadow: 0 0 60rpx rgba(0, 0, 0, .5);
}
.zhen{
	transition: .1s;
}
.zhen image{
	width: 215rpx;
	height: 203rpx;
}
.direction-value {
	font-size: 100rpx;
	color: #705540;
	position: relative;
}

.direction-degree {
	position: absolute;
	top: 0;
	right: -40rpx;
	font-size: 40rpx;
}
.merge{

	background: #3d6cc8;
	color: #fff;
	margin-top: 30rpx;
	width: 60%;	
  position: absolute;
  left: 50%;
  bottom:80rpx;
  transform: translate(-50%);
  z-index:6
}
/* info */
.info{
  display: none;
   position: absolute;
  left: 50%;
  bottom:130rpx;
  transform: translate(-50%);
	width: 720rpx;
	margin: 26rpx auto;
	border-radius: 15rpx;
	box-shadow: 0 0 30rpx rgba(162,114,67,.5);
	background: #f7f4f1;
	box-sizing: border-box;
	padding: 30rpx 40rpx;
}
.info text{
	display: block;
	font-size: 24rpx;
	color: #745339;
	margin-bottom: 12rpx;
}
.info .weight{
	font-weight: bold;
	font-size: 28rpx;
	color: #e8600f;
	margin-top: 16rpx;
}
.item{
	width: 77rpx;
	position: absolute;
	left: 20rpx;
  bottom: 52rpx;
  text-align: center
}
.item image{
	width: 55rpx;
	height: 55rpx;
}
.item .img-box{
	width: 77rpx;
	height: 77rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	background: #a27243;
	border-radius: 50%;
}
.item  text{
	display: block;
	font-size: 26rpx;
