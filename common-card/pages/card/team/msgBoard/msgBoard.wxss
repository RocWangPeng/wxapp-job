page{
	background: #ededed;
}
.message_btn_box{
	margin-top: 24rpx;
	display: flex;
	justify-content: center;
}

.pencil{
	width: 26rpx;
	height: 26rpx;
	margin-right: 10rpx;
}
.msgList{
	padding-bottom: 80rpx;
}
.msgItem{
	display: flex;
	padding: 36rpx 40rpx;
	border-bottom: 1rpx solid #ccc;
}
.defaultHeadImg{
	width: 70rpx;
	height: 70rpx;
	border-radius: 50%;
}
.msgLeft{
	padding: 0 10rpx;
}
.msgMain .nicke{
	font-size: 26rpx;
	color: #999;
	line-height: 60rpx;
}
.msgMain .content{
	font-size: 26rpx;
	color: #333;
	padding-right: 12rpx;
	box-sizing: border-box;
	word-break:break-all;
}
.message_input{
	background: #ededed;
	min-height: 100rpx;
	position: fixed;
	bottom: 0;
	left: 0;
	box-sizing: border-box;
	padding: 22rpx 26rpx;
	display: flex;
	border-top: 1rpx solid #d5d5d5;
}
.textarea{
	max-width: 560rpx;
	min-height: 60rpx;
	line-height: 60rpx;
	background: #fff;
	font-size: 26rpx;
	box-sizing: border-box;
	padding: 0 20rpx;
	border-radius: 10rpx;
	/* box-shadow: 0 0 3rpx rgba(0,0,0,.3); */
}
.message_btn{
	width: 110rpx;
	height: 60rpx;
	background: #4d99f8;
	color: #fff;
	font-size: 22rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	margin: 0;
	margin-left: 26rpx;
}
.supoort {
	display: flex;
	align-items: center;
	/* justify-content: flex-end; */
}
.supoort view{
	display: flex;
	align-items: center;
}
.supoort image{
	width: 24rpx;
	height: 24rpx;
}
.supoort text{
	padding: 0 16rpx;
	font-size: 22rpx;
	color: #aaa;
}