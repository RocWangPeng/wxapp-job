.textarea{
	width: 677rpx;
	height: 230rpx;
	background: #fff;
	font-size: 26rpx;
	box-sizing: border-box;
	padding: 30rpx;
	border: 1rpx solid #d5d5d5;
	margin: 45rpx auto;
	border-radius: 6rpx;
	/* box-shadow: 0 0 3rpx rgba(0,0,0,.3); */
}
.message_btn_box{
	margin-top: 24rpx;
	display: flex;
	justify-content: center;
}
.message_btn{
	width: 260rpx;
	height: 72rpx;
	background: #4d99f8;
	color: #fff;
	font-size: 30rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	margin: 0;
	margin-right: 26rpx;
}
.pencil{
	width: 26rpx;
	height: 26rpx;
	margin-right: 10rpx;
}
.msgList{
	
}
.msgItem{
	display: flex;
	padding: 36rpx 40rpx;
	border-bottom: 1rpx solid #ccc;
}
.defaultHeadImg{
	width: 70rpx;
	height: 70rpx;
	border-radius: 50%;
}
.msgLeft{
	padding: 0 10rpx;
}
.msgMain .nicke{
	font-size: 26rpx;
	color: #999;
	line-height: 60rpx;
}
.msgMain .content{
	font-size: 26rpx;
	color: #333;
	padding-right: 12rpx;
	box-sizing: border-box;
}