page{
	width: 100%;
	min-height: 100vh;
	color: #333;
	background:#f5efe1 url('http://ii.sinelinked.com/miniProgramAssets/bg-mb-01.jpg') no-repeat;
	background-size: contain;
	box-sizing: border-box;
}
.header{
  height: 260rpx;
  display: flex;justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-bottom: 20rpx;
}
.agent-name{
  display: block;
  line-height: 80rpx;
  font-size: 36rpx;
	color: #333;
	display: none;
}
.head-img{
  width: 200rpx;
  height: 200rpx;
  border: 6rpx solid #fff;
  border-radius: 50%;
}
.selfShowSummary{
	font-size: 26rpx;
	padding: 10rpx 20rpx;
	box-sizing: border-box;
}
.personSummary-title{
  height: 30rpx;
  border-top: 1rpx solid #ccc;
  position: relative;
}
.personSummary-title .jianjie{
  display: inline-block;
  position: absolute;
  left: 50%;
  top: -26rpx;
  background: #f5efe2;
	border-radius:30rpx ;
  padding: 0 30rpx;
  transform: translateX(-50%);
  font-size: 36rpx;
}

.top_banner{
	height: 242rpx;
	overflow: hidden;
}
.show_top_img{
	width: 100%;
	height: 242rpx;
}
.main{
	width: 670rpx;
	margin: 0 auto;
	margin-top:30rpx;
}
.head_info{
	position: relative;
	min-height: 146rpx;
	background: #fff;
	border-radius: 8rpx;
	box-shadow: 0 0 16rpx rgba(0,0,0,.2);
	box-sizing: border-box;
	margin-top: 22rpx;
	padding-bottom: 10rpx;
}
.head_img{
	width: 170rpx;
	height: 170rpx;
	border-radius: 50%;
	overflow: hidden;
	/* transform: translate(10rpx,-120rpx); */
	position: absolute;
	left: 10rpx;
	top: -120rpx;
}
.agent_name{
	font-size: 34rpx;
	color: #333333;
	/* float: left; */
	margin-left: 206rpx;
	padding-top: 20rpx;
}
.agent_info{
	padding-top: 12rpx;
	color: #8e8e8e;
	font-size: 24rpx;
	padding-left: 20rpx;
	text-indent: 4em;
}
.show_img{
	display: flex;
	flex-wrap: wrap;
	margin-top: 40rpx;
}
.show_item{
	width: 33.33%;
	text-align: center;
}
.show_item image{
	width: 190rpx;
	height: 190rpx;
}
#show_img_one {
	justify-content: center;
	height: 55vh;
	align-items: center;
}
#show_img_one .show_item{
	width: 60%;
	text-align: center;
	
}
#show_img_one .show_item image{
	width: 100%;
	height: 100%;
}