page{
	background: #f9f9f9;
}
.team-member{
	margin-top: 30rpx;
	background: #fff;
}
.team-title{
	display: flex;
	padding: 0 30rpx;
	justify-content: space-between;
}
.team-title text{
	margin-left: 10rpx;
	font-size: 26rpx;
}
.member-list{
	margin-top: 50rpx;
	display: flex;
	flex-wrap: wrap;
	align-items: center;
}
.member-list .item{
	width: 25%;
	margin-bottom: 40rpx;
	display: flex;
	justify-content: center;
	align-content: center;
	align-items: center;
	flex-direction: column;
}
.member-list .item .head-img{
	width: 90rpx;
	height: 90rpx;
	border-radius: 50%;
	margin-bottom: 10rpx;
}
.member-list .item text{
	font-size: 30rpx;
}
/* member-model */
.member-model{
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,.5);
	position: fixed;
	top: 0;
	left:0;
	z-index: 200;
	transition: .5s opacity;
	transform: scale(0);
	opacity: 0.3;
}
.member-model-show{
	transform: scale(1);
	opacity: 0.9;
}
.model-main{
	width: 100%;
	height: 100%;
	position: relative;
}
.model-content{
	background: #FFFFFF;
	border-radius: 20rpx;
	width: 600rpx;
	position: absolute;
	left: 50%;
	transform: translateX(-50%);
	top: 20%;
	box-sizing: border-box;
	padding: 36rpx;
}
.model-content .head{
	display: flex;
	align-items: center;
	margin-bottom: 50rpx;
}
.model-content .head-img{
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	margin-right: 26rpx;
}
.model-content .head text{
	font-size: 26rpx;
	display: block;
}
.model-content .head text:first-child{
	font-size: 30rpx;
	padding-bottom: 12rpx;
}
.model-content .cell{
	font-size: 26rpx;
	margin-bottom: 16rpx;
}
.model-content .cell text{
	margin-left: 26rpx;
}
.model-content .desc{
	line-height: 44rpx;
	font-size: 30rpx;
}
.model-btns {
	margin-top: 40rpx;
	display: flex;
	justify-content: space-around;
}
.model-btns .item{
	width: 140rpx;
	height: 55rpx;
	background: #4E8CEE;
	border-radius:30rpx;
	font-size: 26rpx;
	text-align: center;
	color: #FFFFFF;
	line-height: 55rpx;
}
.model-btns .item:first-child{
	background: #ff5c5c;
}
.model-btns .item:last-child{
	background: #ff5c5c;
}
.model-main .close{
	position: absolute;
	top: 22%;
	right: 15%;
	z-index: 30;
}

.null{
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
	min-height: 74vh;
}
.no-msg{
	width: 150rpx;
	height: 150rpx;
}
.null text{
	font-size: 30rpx;
	color: #999;
}