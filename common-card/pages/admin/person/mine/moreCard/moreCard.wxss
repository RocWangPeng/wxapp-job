page{
	background: #f9f9f9;
}
.mine-moreCard{
	margin-top: 30rpx;
}
.card-list{
	display: flex;
	align-items: center;
	margin-bottom: 20rpx;
	border-radius: 20rpx;
	box-sizing: border-box;
	padding: 24rpx 30rpx;
	background: #fff;
	box-shadow: 0 0 10rpx rgba(0,0,0,.2);
}
.card-list .head-img{
	width: 107rpx;
	height: 107rpx;
	border-radius: 50%;
}
.card-list .remark{
	flex: 2;
	padding-left: 50rpx;
	box-sizing: border-box;
}
.card-list .remark .card-name{
	font-size: 30rpx;
	color: #333;
}
.card-list .remark .remark-txt{
	padding-top: 6rpx;
	font-size: 24rpx;
	color: #666;
}
.add-card{
	width: 460rpx;
	height: 170rpx;
	border-radius: 12rpx;
	border: 1rpx dashed #aaa;
	margin: 0 auto;
	margin-top: 66rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	color: #aaa;
	font-size: 28rpx;
}
.add-card-input{
	width: 60%;
	margin: 0 auto;
	
	border: 1rpx solid #aaa;
}
.default{
	text-align: center;
	font-size: 24rpx;
}
.public-plate{
	width: 80%;
	margin: 0 auto;
	margin-top: 70rpx;
	text-align: center;
}
.public-plate text{
	font-size: 26rpx;
	padding-left: 10rpx;
	color: #666;
}