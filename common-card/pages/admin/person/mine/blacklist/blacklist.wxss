page{
	background: #f9f9f9;
}
.mine-whitelist{
	margin-top: 30rpx;
	margin-bottom: 30rpx;
	background: #fff;
}
.whitelist-cell{
	border-bottom: 1rpx solid #e5e5e5;
}
.whitelist-cell text{
	font-size: 26rpx;
	color: #333333;
	margin-right: 16rpx;
}
.whitelist-cell .content{
	display: flex;
}
.whitelist-cell .cell-name{
	flex: 1;
}
.whitelist-cell .cell-tel{
	flex: 2;
}
.add-bar{
	position: fixed;
	bottom: 60rpx;
	width: 100%;
	display: flex;
	justify-content: center;
}
.add-bar-main{
	box-shadow: 0 0 10rpx rgba(0,0,0,.2);
	border-radius: 50rpx;
	box-sizing: border-box;
	padding: 18rpx 30rpx;
	background: #fff;
	display: flex;
}
.add-bar-main .items{
	text-align: center;
	font-size: 20rpx;
	color: #666666;
	padding: 0 20rpx;
}
.null{
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
	min-height: 77vh;
}
.no-msg{
	width: 150rpx;
	height: 150rpx;
}
.null text{
	font-size: 30rpx;
	color: #999;
}

/* remarksModal */
.remarksModal{
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 500;
	background: rgba(0,0,0,.5);
}
.remarks-main{
	background: #FFFFFF;
	border-radius: 20rpx;
	box-sizing: border-box;
	padding: 30rpx 50rpx;
	padding-top: 20rpx;
	position: absolute;
	left: 50%;
	top: 40%;
	transform: translate(-50%,-50%);
}
.remarks-title{
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-size: 30rpx;
	color: #333;
	border-bottom: 1rpx solid #e5e5e5;
}

/* remark */
.remarksModal .remarkTxt{
	height: 60rpx;
	background: #f5f5f5;
	padding: 0;
	border-radius: 28rpx;
	box-sizing: border-box;
	padding-left: 36rpx;
	margin-top: 36rpx;
	margin-bottom: 36rpx;
}
.remarkTag{
	height: 60rpx;
	display: flex;
	align-items: center;
}
.remarkTagItem{
	margin-right: 18rpx;
	border-radius: 18rpx;
}
.remarkTag .addremark{
	padding-left: 10rpx;
	padding-left: 10rpx;
	font-size: 20rpx;
	display: inline-block;
	width: 100%;
}
.remarkBtn{
	margin-top: 20rpx;
	display: flex;
	justify-content: space-between;
}
.remarkBtns{
	width: 220rpx;
	height: 65rpx !important;
	line-height: 65rpx !important;
	padding-top: 0;
	padding-bottom: 0;
}