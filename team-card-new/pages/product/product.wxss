/* pages/agent/product/product.wxss */
page{
	background: #f9f9f9;
}
.main{
	width: 688rpx;
	margin: 0 auto;
}

.product_title{
	display: block;
	font-size: 26rpx;
	color: #383838;
	padding-left: 34rpx;
	border-left:7rpx solid #3d6cc8 ;
	margin-top: 26rpx;
	margin-bottom: 22rpx;
}

.item{
	border-radius: 12rpx;
	background: #fff;
	box-shadow: 0 0 16rpx rgba(0,0,0,.2);
	box-sizing: border-box;
	/* height: 160rpx; */
	padding: 20rpx 30rpx;
	display: flex;
	justify-content: space-between;
	margin-bottom: 20rpx;
  align-items: center;
}
.left_img{
	width: 120rpx;
	height: 120rpx;
	overflow: hidden;
}
.left_img image{
	width: 100%;	
	max-height: 120rpx;
}
.product_name{
	font-size: 30rpx;
	color: #383838;
  
}
.tag_box{
	padding-top: 6rpx;
  text-align: right;
}
.tag_box .tag{
	font-size: 22rpx;
	color: #5c5c5c;
	padding: 0 20rpx;
	background:#f0f4fb ;
	line-height: 32rpx;
	border: 1rpx solid #cad6f6;
	border-radius: 18rpx;
	display: inline-block;
	margin-right: 34rpx;
	margin-top: 5rpx;
	max-width: 270rpx;
	overflow: hidden;
}
.right_con{
	width: 470rpx;
  line-height:40rpx;
}
.null_product {
  text-align: center
}
.null_product text{
  display: block;
  text-align: center;
  font-size: 22rpx;
	color: #5c5c5c;
}
.null_product image{
  width: 70%;
}