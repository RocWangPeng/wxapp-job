/* pages/case/case.wxss */
page{
  background: #f1f1f1;
}
.case-nav-top{
  height: 120rpx;
  width: 100%;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  display: flex;
  justify-content: space-around;
  align-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  background: #fff;
  position: fixed;
  top: 0;
  z-index: 100

}
.case-nav-top text{
  padding: 0 14rpx;
  line-height: 40rpx;
  border: 1rpx solid #999;
  border-radius: 14rpx;
}
.case-nav-top text.active{
  color: #0b4ca5;
  border-color: #0b4ca5;
}
.case-list-box{
  margin-top: 130rpx;
   margin-bottom: 50rpx;
}
.case-list-item{
  width: 100%;
  height: 260rpx;
  position: relative;
  margin-bottom: 28rpx;
}
.case-item-bg{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}
.case-item-center{
  width: 674rpx;
  height: 197rpx;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  color: #fff;
  display: flex;
  justify-content: space-between;
}
.case-item-sm{
  width: 344rpx;
  height: 197rpx;
}
.clae-item-rightCon{
  width: 306rpx;
  font-size: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-bottom: 6rpx;
}
.clae-item-rightCon text{
  display: block;
}
.head-title{
  font-size: 30rpx;
}
.case-item-icon{
  width: 21rpx;
  height: 18rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 10rpx;
}
text.case-item-tag{
  display: inline-block;
}